<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercisesList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_workout">


    <EditText
        android:id="@+id/WorkoutName"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="Workout Name"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/setExerciseName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myWorkouts"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/addExercise"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/custom_button2"
        android:text="add Exercise"
        app:layout_constraintBottom_toTopOf="@+id/createWorkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/createWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/custom_button2"
        android:text="create workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addExercise" />

    <Spinner
        android:id="@+id/setSetsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/WorkoutName"
        app:layout_constraintTop_toBottomOf="@+id/WorkoutName" />

    <Spinner
        android:id="@+id/setRepsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkoutName" />

    <EditText
        android:id="@+id/setExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="119dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="Exercise Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ExerciseList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="@+id/addExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_clients_for_workout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text=" Create Workout"
        android:textColor="@color/blue_100"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <Spinner-->
    <!--        android:id="@+id/add_client_to_workout_spinner"-->
    <!--        android:layout_width="195dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentStart="true"-->
    <!--        android:layout_alignParentTop="true"-->
    <!--        android:layout_marginStart="28dp"-->
    <!--        android:layout_marginTop="189dp" />-->

    <Button
        android:id="@+id/myWorkouts"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:text="My Workouts"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_button2" />

    <Button
        android:id="@+id/add_client_to_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/custom_button2"
        android:text="Add Clients"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/setSetsSpinner"
        app:layout_constraintTop_toBottomOf="@+id/setExerciseName" />

    <TextView

        android:id="@+id/list_clients_for_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="No Clients Added"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ExerciseList"
        app:layout_constraintTop_toBottomOf="@+id/add_client_to_workout_button" />


</androidx.constraintlayout.widget.ConstraintLayout>